{
    "name": "nickurt/laravel-stopforumspam",
    "description": "StopForumSpam for Laravel 5.8/6.0",
    "keywords": ["stopforumspam", "laravel"],
    "license": "MIT",
    "require": {
        "php": "^7.2",
        "laravel/framework": "^5.8|^6.0",
        "guzzlehttp/guzzle": "6.*"
    },
    "require-dev": {
        "phpunit/phpunit" : "^7.5|^8.0",
        "orchestra/testbench": "^3.8|^4.0"
    },
    "autoload": {
        "psr-4": {
            "nickurt\\StopForumSpam\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    },
    "extra": {
        "laravel": {
            "providers": [
                "nickurt\\StopForumSpam\\ServiceProvider"
            ],
            "aliases": {
                "StopForumSpam": "nickurt\\StopForumSpam\\Facade"
            }
        }
    }
}
